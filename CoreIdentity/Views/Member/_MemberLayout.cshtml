<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <script src="~/lib/jquery/jquery.js"></script>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">LOGO</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Member" asp-action="Index">Üye Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info" aria-current="page" asp-controller="Admin" asp-action="Index">Admin Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info" aria-current="page" asp-controller="Member" asp-action="Editor">Editor Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info" aria-current="page" asp-controller="Member" asp-action="Manager">Manager Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-danger" aria-current="page" asp-controller="Member" asp-action="AnkaraPage">Ankara Sayfasi</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
<div class="container" style="margin-top: 10px">
    <section class="col-md-12">
        <div class="row">
            <div class="col-md-8">
                @RenderBody()
            </div>
            <div class="col-md-4">
                <h3>Menü</h3>
                <a class="btn btn-info btn-block" asp-action="PasswordChange" asp-controller="Member">Sifre Degistirme</a>
                <a class="btn btn-info btn-block" asp-action="UserEdit" asp-controller="Member">Bilgi Güncelleme</a>
                <a class="btn btn-info btn-block" asp-action="Logout" asp-controller="Member" asp-route-returnUrl="/Home/Index">Cikis Yap</a>
            </div>
        </div>
    </section>
</div>
</body>
</html>
